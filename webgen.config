## Setting the default language. The argument must be an ISO-639-1/2 language code.
website.lang: en

## Adding some extensions to the copy source handler.
patterns:
  Copy:
    add: ["**/*.css", "**/*.js", "**/*.jpg", "**/*.png", "**/*.gif", "**/*.zip", "**/*.ico", "google*.html", "y_key_*.html", "yandex_*.txt", "robots.txt"]

# Required for Atom feed generator
website.base_url: http://www.inquisitor.ru/

# Should make links to current page work as in pre-webgen-1.0; doesn't work for now
website.link_to_current_page: false
